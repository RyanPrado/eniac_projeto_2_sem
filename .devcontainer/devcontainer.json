{
  "name": "Java with Tomcat and MySQL",
  "dockerComposeFile": ["docker-compose.yml"],
  "initializeCommand": "bash -lc '.devcontainer/scripts/prepare-env.sh'",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "forwardPorts": [8080, 3306],
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
  ],
  "postCreateCommand": {
    "init": "bash -lc \"chmod +x .devcontainer/scripts/setup.sh || true; bash .devcontainer/scripts/setup.sh\"",
    "dev": "npm run build"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-java-pack",
        "bradlc.vscode-tailwindcss",
        "Anthropic.claude-code",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "christian-kohler.path-intellisense",
        "Gruntfuggly.todo-tree",
        "bierner.github-markdown-preview",
        "samuel-weinhardt.vscode-jsp-lang",
        "redhat.ansible"
      ]
    }
  }
}
